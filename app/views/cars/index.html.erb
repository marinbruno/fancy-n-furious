<%= form_tag cars_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control mb-3",
    placeholder: "Find a car"
  %>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="container d-flex flex-wrap justify-content-between mt-3 p-0">
  <% @cars.each do |car| %>
    <div class="card mb-3 shadow" style="width: 15rem;">
      <%= cl_image_tag car.photo, :height=>145, :width=>225, :crop=>"fill", class: "card-img-top m-0" %>
      <div class="card-body p-2 text-center">
        <h5 class="card-title m-0"><%= car.model %></h5>
        <p class="card-text"><%= car.brand %></p>
        <a href="/cars/<%= car.id %>" class="btn btn-dark btn-block shadow">See details</a>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add your car!', new_car_path, class: "mt-3 btn btn-secondary btn-block shadow" %>

