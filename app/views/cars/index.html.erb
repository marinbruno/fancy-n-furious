<h1>All fancy cars in here!</h1>

<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="container d-flex flex-wrap justify-content-between">
  <% @cars.each do |car| %>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag car.photo, :height=>145, :width=>300, :crop=>"fill", class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= car.model %></h5>
        <p class="card-text"><%= car.brand %></p>
        <a href="/cars/<%= car.id %>" class="btn btn-primary">See details</a>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add you car!', new_car_path, class: "mt-3 btn btn-primary btn-block" %>

